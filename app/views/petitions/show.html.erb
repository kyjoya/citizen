<div class="small-12 columns" id="petition_page">
  <h1><%= @petition.name %></h1>
  <%= image_tag @petition.image.url, size: "300x300" %>
  <p><%= @petition.description  %></p>

  <% if !current_user.nil? && !@petition.users.include?(current_user) %>
    <div class="button small radius">
      <%= link_to 'Sign Petition', petition_memberships_path(petition_id: params[:id],
            user: current_user.id, state: @petition.state), method: :post %>
    </div>
  <% end %>

  <h4>Signatures</h4>
  <div class="small-12 columns">
    <% if @petition.users.include?(current_user) %>
      <% @petition.users.each do |name| %>
        <li><%= name.first_name %> <%= name.last_name %></li>
      <% end %>
    <% end %>
  </div>
</div>
