<div class="small-12 columns">
  <%= form_for [@state, @petition] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :image %>
    <%= f.file_field :image %>

    <%= f.submit "Update" %>
  <% end %>
</div>
